@model UpdateEmailVewModel

@{
    ViewData["Title"] = "Manage Email";
    ViewData["CurrentPage"] = "UpdateEmail";
}

<div class="row">
    <div class="col-md-6">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="@Model.Email" class="form-control" hidden />
                @if ((bool) ViewBag.IsEmailConfirmed == true)
                {
                    <div class="input-group">
                        <input asp-for="@Model.Email" class="form-control" disabled />
                        <div class="input-group-append">
                            <span class="input-group-text text-success font-weight-bold">âœ“</span>
                        </div>
                    </div>
                }
                 else
                {
                    <span> Your Email have not confirmed yet</span>
                    <hr>
                    <input asp-for="Email" class="form-control" disabled />
                    <button id="email-verification" type="submit" class="btn btn-link">Send verification email</button>
                }
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewEmail"></label>
                <input asp-for="@Model.NewEmail" class="form-control" />
                <span asp-validation-for="@Model.NewEmail" class="text-danger"></span>
            </div>
            <button id="change-email-button" type="submit" class="btn btn-primary">Change email</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
