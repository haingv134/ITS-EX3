<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.9/dist/sweetalert2.all.min.js"></script>
    <script src="~/js/notify.js"></script>
</head>

<body style="background-color: aliceblue;">
    @* Show Nontification *@
    <header class="mb-5">
        <div class="navbar navbar-expand-lg navbar-light bg-light border border-button shadow rounded fixed-top">
            <div class="container">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand text-decoration-none"
                    aria-current="page">
                    <span class="fw-bold text-secondary">Student Management</span>
                </a>
                <p id="internet-status" title="Online" class="mt-2"
                    style="display: inline-block; width: 15px; height: 15px; border-radius: 100%;">
                </p>
                <!-- toggle button for mobile nav -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav"
                    aria-controls="main-nav" aria-expanded="false" aria-label="toggle navigation">
                    <span class="navbar-toggler-icon"> </span>
                </button>
                <!-- navigation link -->
                <div class="collapse navbar-collapse justify-content-end align-center" id="main-nav">
                    <ul class="navbar-nav ">
                        <li class="nav-item ">
                            <a asp-controller="Class" asp-action="Index" class="nav-link">Class</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Student" asp-action="Index" class="nav-link">Student</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Subject" asp-action="Index" class="nav-link">Subject</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="GenerateJson" class="nav-link">JSON</a>
                        </li>
                        <li class="nav-item ms-3 d-none d-md-inline">
                            <form class="d-flex flex-crow" asp-controller="Student" asp-action="Search">
                                <input class="form-control me-2 border border-secondary" type="search"
                                    placeholder="Press Shift + F to search" aria-label="Search" id="btnSearch">
                                <button class="btn btn-outline-secondary" type="submit">Search</button>
                            </form>
                        </li>
                        <li class="nav-item ms-3 d-inline">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        &nbsp;
    </header>
    <main class="wrapper">
        <div id="popup"></div>

        <div id="wait-container">
            <div id="wait">
                <img src='https://www.w3schools.com/jquERy/demo_wait.gif' width="64" height="64" />
                <br>
                Loading..
            </div>
        </div>
        <div id="back-to-top" style="display: none;
    background: #00bfff;
    position: fixed;
    right: 20px;
    bottom: 20px;
    height: 40px;
    width: 40px;
    padding: 10px 10px;
    cursor: pointer;">
            ↑</div>

        <div class="container mb-5">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    @{
                        string controllerName = (ViewContext.RouteData.Values["controller"] ?? string.Empty).ToString();
                        string actionName = (ViewContext.RouteData.Values["action"] ?? string.Empty).ToString();
                    }
                    @if (!string.IsNullOrEmpty(controllerName))
                    {
                        @if (controllerName != "Home")
                        {
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        }
                        <li class="breadcrumb-item"><a asp-controller="@controllerName" asp-action="Index"> @controllerName
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">@actionName</li>
                    }
                </ol>
            </nav>
            @RenderBody()
        </div>
    </main>
    <footer class="d-flex text-center text-lg-start p-3 mb-0 border border-top-1">
        <div class="container">
            <form action="/" method="post">
                <div class="row d-flex justify-content-start pb-2">

                    <div class="col-md-3 mb-md-0 pe-0">
                        <!-- Email input -->
                        <input type="email" placeholder="Receive logger information"
                            class="form-control form-control-sm" />
                    </div>
                    <div class="col-auto col-md-0 ps-1">
                        <button type="submit" class="btn btn-primary btn-sm">
                            Subscribe
                        </button>
                    </div>

                    <div class="col-md-8 fs-6">
                        <span>Your location: </span>
                        <i class="ti-control-record"></i>
                        <span id="currentLocation">@System.Globalization.CultureInfo.CurrentUICulture.NativeName</span>
                        @{
                            string hostname = System.Net.Dns.GetHostName();
                            string ip = System.Net.Dns.GetHostEntry(hostname).AddressList[0].ToString();
                        }
                        <span>IP (@ip), hostname (@hostname) </span>
                    </div>
                </div>
            </form>
        </div>
    </footer>
</body>
<script>
    window.setInterval(function () {
        var status = document.querySelector("#internet-status");
        if (window.navigator.onLine){
            status.style.backgroundColor = "green";
        } else {
            status.style.backgroundColor = "red";
        }
    }, 1000);

    $(window).scroll(function (e) {
        if ($(this).scrollTop() - 200 > 0) {
            $("#back-to-top").slideDown('fast');
        } else {
            $("#back-to-top").slideUp('fast');
        }
    });
    $("#back-to-top").click(function (e) {
        $("html, body").animate({
            scrollTop: 0
        }, 200);
    });

    function notify(msg, typeMsg) {
        $.notify(msg, {
            globalPosition: "top center",
            className: typeMsg
        });
    }
    function DoAction(url) {
        var splits = url.split('?');
        $.ajax({
            type: "POST",
            url: url,
            data: splits.shift(),
            success: function (data) {
                if (data.success) {
                    if (datatable != 'undefined') {
                        datatable.ajax.reload();
                    }
                    notify(data.message, "success");
                } else {
                    notify(data.message, "error");
                }
            },
            error: function (data) {
                notify(data.message, "error");
            }
        })
    }
    function OpenPopup(url) {
        $.get(url)
            .done(function (response) {
                $("#popup").html(response);
                // if response has model -> show it and processing, if not: push error nontification
                if ($(".modal").length) {
                    $(".modal").modal('show');
                    var form = $("#popup form");
                    if (form.length) {
                        $.validator.unobtrusive.parse(form);
                    }
                    ClosePopup();
                } else {
                    $("#popup").hide();
                    notify(response, "error");
                }
            });
    }
    function ClosePopup() {
        $(".btn-close").on("click", function (e) {
            e.preventDefault();
            const swalWithBootstrapButtons = Swal.mixin({
                customClass: {
                    confirmButton: 'btn btn-success mx-2',
                    cancelButton: 'btn btn-danger'
                },
                buttonsStyling: false
            });
            swalWithBootstrapButtons.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, close it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $(".modal").modal("hide");
                } else {
                    $(".modal").modal("show");
                }
            });
        });
    }
    // add submit handling
    function SubmitForm(form) {

        if ($(form).valid()) {
            var formData = new FormData(form);
            $.ajax({
                type: "POST",
                url: form.action,
                data: formData,

                cache: false,
                contentType: false,
                processData: false,

                success: function (data) {
                    if (data.success) {
                        // if form inside a popup modal
                        if ($(".modal").length) {
                            $(".modal").modal("hide");
                        }
                        // if form is proccessing to datatable
                        if (typeof (datatable) != 'undefined') {
                            datatable.ajax.reload();
                        }
                        // if form inside subject part
                        if (typeof (subjectList) != 'undefined') {
                            ajaxLoadSujext();
                        }
                        notify(data.message, "success");
                    } else {
                        notify(data.message, "error");
                    }
                },
                error: function (data) {
                    notify(data.message, "error");
                }
            })
        }
        return false;
    }

    $(document).ajaxStart(function () {
        $("#wait-container").css("display", "flex");
    });
    $(document).ajaxComplete(function () {
        $("#wait-container").css("display", "none");
    });
    // for searching on navbar
    $(document).on('keydown', function (event) {
        if (event.shiftKey && (event.key === 'F' || event.key === 'f')) {
            $("#btnSearch").trigger('select');
        }
    })
</script>

<link href="~/themify-icons/themify-icons.css" rel="stylesheet" />
<link href="~/css/style.css" rel="stylesheet" />

@* Handing section that child layout or sub-cshtml have *@
@await RenderSectionAsync("Scripts", required: false)

</html>
