@using Microsoft.AspNetCore.Identity
@namespace DatabaseLayer.Entity.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    string returnUrl = @Url.Page("/", new { area = "" });
}

@if (SignInManager.IsSignedIn(this.User))
{
    <ul class="navbar-nav">

        <li class="nav-item">
            @* <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage"> Xin chào
                @UserManager.GetUserName(this.User) </a> *@
            <a class="nav-link text-dark" href="/Identity/Account/Manage"> Xin chào @UserManager.GetUserName(this.User) </a>
        </li>

        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@returnUrl"
            method="post">
                <button type="submit" class="btn btn-link text-dark">Đăng xuất</button>
            </form>

        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register" > Đăng Ký </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"> Đăng Nhập </a>
        </li>
    </ul>
}
