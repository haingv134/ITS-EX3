@model WebLayer.EditModel.Class.AddEditModel
@{
    Layout = null;
}

<form class="form-group" asp-action="Add" id="submitForm" onsubmit=" return SubmitForm(this)">
    <div class="modal fade" id="modal-id" aria-labelledby="modal-title" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-title">Enter new class</h5>
                    <button class="btn btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="All" style="color: red"></div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label asp-for="@Model.Name" class="input-group-text" id="cName">Name </label>
                        </div>
                        <input asp-for="@Model.Name" placeholder="Class" class="form-control" aria-describedby="cName" aria-label="ClassName">
                    </div>                    
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" type="button" data-bs-dismiss="modal">Close</button>
                    <button class="btn btn-primary" type="submit">Add Class</button>
                </div>
            </div>
        </div>
    </div>
</form>
